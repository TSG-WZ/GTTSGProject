
@{
    Layout = null;
}

@model DTTSG_Model.BookInfo

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>图书详情</title>
    <link rel="stylesheet" href="~/lib/layui-v2.5.5/css/layui.css" media="all">
</head>
<body>
    <div style="margin:30px">
            <a href="/Book/BookList" style="font-size:16px;"><< 返回首页</a>
    </div>

    <div class="layui-container">
        <div class="layui-row">
            <div class="layui-col-md6">
                <img src="@Model.ImageInfo.ImageLink" />
            </div>
            <div class="layui-col-md6">
                <br />
                <h1>图书名称：@Model.BookName</h1><br />
                <h2>状态:@Model.BookStatu.B_StatuName</h2>
                <h2>图书类型:@Model.BookType.B_TypeName</h2><br />
                <h2>出版社:@Model.BookPublic</h2><br />
                <h2>作者:@Model.BookAuthor</h2><br />
                <h2>出版时间:@Model.BookPubtime.ToLongDateString().ToString()</h2><br />
                <h1><strong>$@Model.BookPrice</strong></h1><br />
                <a href="/Book/BrrowBook?bookId=@Model.BookId" class="layui-btn layui-btn-normal layui-btn-lg">借阅</a>
                <a href="#" class="layui-btn layui-btn-normal layui-btn-lg">购买</a>

            </div>
        </div>
    </div>

</body>
</html>
